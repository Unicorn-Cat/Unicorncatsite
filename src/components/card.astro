---
import Icon from "./icon.astro";

type Props = {
  header?: string;
  icon?: string;
};

const { header, icon } = Astro.props as Props;
---

<div class="rounded shadow-lg border-slate-200 border w-full">
  <div class="flex gap-2">
    <div class="flex justify-center items-center w-2/12">
      {icon && <Icon icon={icon} class="inline-block" />}
    </div>
    <div class="pr-6 py-4 w-10/12">
      {header && <div class="font-bold text-xl mb-2 font-serif">{header}</div>}
      <p class="text-gray-700 text-base">
        <slot />
      </p>
    </div>
  </div>
</div>
