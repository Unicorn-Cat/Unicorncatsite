---
import Icon from "./icon.astro";

type Props = {
  header?: string;
  icon?: string;
};

const { header, icon } = Astro.props as Props;
---

<div class="rounded shadow-lg border-slate-200 border w-full">
  <div class="px-6 py-4">
    {icon && <Icon icon={icon} />}
    {header && <div class="font-bold text-xl mb-2">{header}</div>}
    <p class="text-gray-700 text-base">
      <slot />
    </p>
  </div>
</div>
