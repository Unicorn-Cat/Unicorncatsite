---
type Props = {
    header?: string;
    content: string;
};

const { header, content } = Astro.props as Props;
---

<div class="max-w-sm rounded shadow-lg border-slate-200 border w-full">
    <div class="px-6 py-4">
        {header && <div class="font-bold text-xl mb-2">{header}</div>}
        <p class="text-gray-700 text-base">
            {content}
        </p>
    </div>
</div>