---
import BaseLayout from "../layouts/base.astro";
---

<BaseLayout>
  <div
    class="flex justify-between max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto mt-28 pb-12 relative"
    slot="header-content"
  >
    <div class="animate-fadeIn">
      <h2
        class="text-3xl md:text-6xl font-bold text-white leading-tight tracking-tight max-w-2xl mb-2"
      >
        Start your digital transformation today
      </h2>

      <div class="text-lg max-w-lg text-[#969fdc]">
        We use emerging tech to redesign business processes, significantly reduce costs, improve
        quality, and efficiency.
      </div>
    </div>

    <img
      src="/unicorn-cat.png"
      class="rounded-lg drop-shadow max-h-96 absolute top-2 right-0 hidden lg:block"
      height="384px"
      width="384px"
    />
  </div>
  <div class="lg:mt-24" slot="content">
    <div class="content flex flex-col justify-between max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto">
      <h2 class="font-sans text-4xl font-semibold text-slate-800 leading-tight tracking-tight mb-4">
        asdf
      </h2>

       asdf
    </div>
  </div>
</BaseLayout>
