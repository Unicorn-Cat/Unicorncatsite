---
import { ViewTransitions } from "astro:transitions";
import MenuLink from "../components/menuLink.astro";

type Props = {
  title?: string;
};

const { title = "Unicorn Cat Consulting" } = Astro.props as Props;
---

<!doctype html>
<html lang="en-US" class="h-full scroll-smooth bg-white antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>

    <base href={Astro.site?.host || "/"} />

    <link rel="apple-touch-icon" sizes="180x180" href="public/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="public/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="public/favicon-16x16.png" />
    <link rel="manifest" href="public/site.webmanifest" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400;0,700;1,400&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link href="/main.css" rel="stylesheet" />

    <ViewTransitions />
  </head>

  <body class="flex flex-col w-full min-h-full text-gray-800 bg-gray-100">
    <header class="h-22 text-white bg-gradient-to-br from-[#100151] to-[#0d3f8f] p-12">
      <div class="flex justify-between items-center max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto">
        <a href="/">
          <h1 class="font-sans text-2xl font-semibold text-white leading-tight tracking-tight">
            UnicornCat Consulting
          </h1></a
        >

        <div class="relative flex gap-6 justify-between text-white text-lg">
          <div class="block lg:hidden">
            <button class="hamburger z-50 relative"><div></div></button>
          </div>

          <div
            class="menu gap-6 justify-between items-center hidden lg:flex lg:static fixed right-0 top-0 bottom-0"
          >
            <MenuLink href="resources">Resources</MenuLink>
            <MenuLink href="about-us">About Us</MenuLink>
            <a
              href="mailto:alex@unicorncatconsulting.com"
              class="rounded-lg px-4 py-2 bg-[#2b73e4] text-white font-semibold opacity-80 hover:opacity-100"
              >Contact us</a
            >
          </div>
        </div>
      </div>

      <slot name="header-content" />
    </header>

    <main class="flex-auto my-12 px-12 md:px-0 text-lg">
      <slot name="content" />
    </main>

    <footer class="mt-32 bg-slate-900 text-slate-300 px-12 py-24">
      <div
        class="flex flex-col md:flex-row justify-between items-center max-w-lg md:max-w-2xl lg:max-w-6xl mx-auto"
      >
        <slot name="footer-content">
          <div>
            <h2
              class="font-sans text-xl font-semibold text-white leading-tight tracking-tight mb-2"
            >
              Unicorn Cat Consulting
            </h2>

            <div>Â© 2023 All rights reserved.</div>
          </div>

          <div class="flex flex-col">
            <a href="emailto:alex@unicorncatconsulting.com">alex@unicorncatconsulting.com</a>
          </div>
        </slot>
      </div>
    </footer>
    <script>
      const toggler = document.querySelector(".hamburger");
      const menu = document.querySelector(".menu");

      toggler?.addEventListener("click", () => {
        toggler?.classList.toggle("active");
        menu?.classList.toggle("hidden");
        menu?.classList.toggle("mobile-menu");
      });
    </script>

    <style>
      .hamburger {
        height: 40px;
        width: 60px;
        padding: 0.2rem;

        display: flex;
        align-items: center;
        justify-content: center;
      }

      .hamburger > div {
        position: relative;
        top: 0;
        right: 0;
        background: white;
        height: 2px;
        width: 60%;
        transition: all 0.4s ease;
      }
      .hamburger > div::before,
      .hamburger > div::after {
        content: "";
        position: absolute;
        top: -10px;
        right: 0;
        background: white;
        width: 100%;
        height: 2px;
        transition: all 0.4s ease;
      }

      .hamburger > div::after {
        top: 10px;
      }

      .active.hamburger > div {
        background: rgba(0, 0, 0, 0);
      }

      .active.hamburger > div::before {
        top: 0;
        transform: rotate(45deg);
        background: #333;
      }

      .active.hamburger > div::after {
        top: 0;
        transform: rotate(135deg);
        background: #333;
      }

      .mobile-menu {
        display: flex;
        background: rgb(243 244 246 / var(--tw-bg-opacity));
        padding: 8rem 4rem 1rem 4rem;
        color: #333;
        flex-direction: column;
        justify-content: flex-start !important;
        z-index: 49;
      }
    </style>
  </body>
</html>
